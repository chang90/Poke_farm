	<h2>Poke Shop</h2>

	<div class="shop_container">
	
		<div class="buyBox"> BUY

			    <% @shops.each do |shop| %>
					<!-- <div class="gridItemsForBuy"> -->
						<div class="imgNDetail">
						    <img src="<%= shop.img_url %>" class="itemsBuyImg" style="width: 20%"> 
						    <div class="nameAndPrice">
							    <p><%= shop.name %></p>
							    <p>$10</p>
						    </div>
					    </div>				   
					   <div class="">
						    <button class="itemBuyBtn">
						    	<p>
						    		<img src="http://cdn.mysitemyway.com/etc-mysitemyway/icons/legacy-previews/icons/ultra-glossy-silver-buttons-icons-arrows/009917-ultra-glossy-silver-button-icon-arrows-triangle-solid-left.png" style="width: 13%"><span class="itemBuyQuantity">0</span><img src="http://cdn.mysitemyway.com/etc-mysitemyway/icons/legacy-previews/icons/ultra-glossy-silver-buttons-icons-arrows/009917-ultra-glossy-silver-button-icon-arrows-triangle-solid-left.png" style="width: 13%">
						    		<span class="dorllarSign">$</span><span class="itemBuyPrice"><%= shop.price %></span>
						    	</p>
						    </button>				   
					    </div>					
					<!-- </div> -->
			  	<% end %>	  	
		 </div> 	
		 <form action="#" method="post" class="sellBox" id="sellBoxForm">
	  	
	  	<div class="sellBox"> SELL

	
			    <% @pokemons.each do |pokemon| %>
				    
				    	<label class="sellCheckbox">
				    		<img src="<%= pokemon.species.img_url %>" style="width: 40%" class="itemsSellImg"> 
				    		<p><%= pokemon.nickname %>  |</p>
						    <p>Level: <%= pokemon.level %>  |</p>
						    <p><span class="">$20</span>   |</p>
				    		<p><input type="checkbox" name="<%= pokemon.nickname %>" value="20" checked="checked"></p>			    
					    </label>
					
			    <% end %>
			    <button>sell</button>

		<p>
	        <label>$<input type="text" name="total" class="num" size="6" value="0" readonly="readonly" /></label>
	    </p>
 <div id="toppings">Toppings: 
        <label><input type="checkbox" name="mushrooms" value=".40" /> mushrooms</label>
    </div>
    
    <p>
        <label>Total: $ <input type="text" name="total" class="num" size="6" value="8.00" readonly="readonly" /></label>
    </p>

	  	</div>  	
</div>

<script>
	console.log("ready for poke farm");
	var itemBuyBtn = document.querySelector(".itemBuyBtn");		
        itemBuyBtn.addEventListener('click', function(event){
    		var itemBuyQuantity = document.querySelector(".itemBuyQuantity");
    			itemBuyQuantity.textContent = Number(itemBuyQuantity.textContent) + 1 ;
    		var itemBuyPrice = document.querySelector(".itemBuyPrice");
    			itemBuyPrice.textContent = Number(itemBuyQuantity.textContent) * 10;
     }); 
     	 

</script>
